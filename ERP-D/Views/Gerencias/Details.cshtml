@model ERP_D.Models.Gerencia

@{
    ViewData["Title"] = "Details";
}

<h2>Detalles</h2>

<div>
    <h4>Gerencia</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EsGerenciaGeneral)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EsGerenciaGeneral)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Empresa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Empresa.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Responsable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Responsable.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GerenciaSuperior)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GerenciaSuperior.Nombre)
        </dd>
    </dl>
</div>
<div>
    <h4>@Html.DisplayNameFor(Model => Model.Posiciones)</h4>
    @if (Model.Posiciones.Any())
    {
        <ul>
            @foreach (Posicion pos in Model.Posiciones)
            {
                <li> @pos.Nombre</li>
            }
        </ul>
    }
    else
    {
        <h5> No hay posiciones registradas para esta Gerencia.</h5>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GerenciaId">Editar</a> |
    <a asp-action="Index">Volver atras</a>
</div>
