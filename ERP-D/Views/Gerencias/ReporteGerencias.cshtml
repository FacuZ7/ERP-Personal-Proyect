@model IEnumerable<ERP_D.ViewModels.ReporteGerencias>

@{
    ViewData["Title"] = "Reporte De Gerencias";
    //var listaOrdenada = Model.OrderByDescending(g => g.CentroDeCosto.Gastos.Sum(gasto => gasto.Monto));
}

<h2>Reporte De Gerencias</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreGerencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Responsable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.gastosTotales)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreGerencia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Responsable)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gastosTotales)
                    </td>
                </tr>
            }

         }
         else
            {
                @*<h5>No hay gastos en ninguna gerencia.</h5>*@
            }

    </tbody>
</table>
<div>
    <a asp-action="Index">Volver atras</a>
</div>
