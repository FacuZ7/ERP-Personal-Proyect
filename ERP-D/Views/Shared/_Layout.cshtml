<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERP_D</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 background_nav">
                
               
            <div class="container">
              

                <div class="col-2">
                    <img class="banner" src="~/img/logo.png">
                    
                    <a class="btn btn-info btn-lg" asp-area="" asp-controller="Home" asp-action="Index"><span class="glyphicon glyphicon-home"></span></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <div class="col-5"></div>
                <div class="col-3">
                    <div class="navbarConfig">
                        <a class="nac-link dropdown-toggle" href="#" id="navbarConfig" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            <span class="material-symbols-outlined">
                                settings
                            </span>
                        </a>

                        <div class="dropdown-menu" aria-labelledby="navbarConfig">
                            <a class="dropdown-item" asp-controller="Empresas" asp-action="Index">Empresa</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Imagenes" asp-action="Index"><span class="material-symbols-outlined" style=font-size:100%>image</span> Imagenes</a>
                            <a class="dropdown-item" asp-controller="Telefonos" asp-action="Index"><span class="material-symbols-outlined" style=font-size:100%>call</span> Telefonos</a>
                        </div>
                    </div>
                </div>
                <div class="col-3">

                    @if (_signInManager.IsSignedIn(User))
                    {
                        <div class="nav-item">                                
                            <a asp-area="" asp-controller="Empleados" asp-action="EditMyProfile" asp-route-id="@Utilidades.GetUserId(User)"><span class="text-primary">Editar mi perfil</span></a>
                        </div>

                        <div class="nav-item">
                            <span class="bg bg-primary">@User.Identity.Name</span>
                            <a asp-area="" asp-controller="Account" asp-action="CerrarSesion"><span class="material-symbols-outlined">logout</span></a>
                        </div>
                    }
                    else
                    {
                        <div class="nav-item">
                            <a asp-area="" asp-controller="Account" asp-action="IniciarSesion"><span class="material-symbols-outlined">login</span></a>
                            @*<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="IniciarSesion"> Iniciar Sesion</a>*@
                        </div>
                    }
                </div>
            </div>

</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; <a asp-area="" asp-controller="Home" asp-action="Institucional">2022 - ORT_ERP</a> - <a asp-area="" asp-controller="Home" asp-action="Privacy">Políticas de Privacidad</a>
            <a class="btn btn-sm btn-info" asp-action="PrecargaGeneral" asp-controller="Precarga">PreCargaDb</a>
            <button class="btn btn-sm btn-info" onclick="popUpInfo();">Información de PreCarga</button>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
