@model Login


    @{
        ViewBag.Title = "Login";
        Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    }



    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="text-center">
                    <figure>
                        <img class="imgLogin" src="~/img/logo.png" />
                    </figure>
                </div>
                <div class="card my-5"></div>
                <div class="card my-5">

                    <form class="card-body cardbody-color p-lg-5" action="IniciarSesion" method="post">



                        @*<div class="text-center">
                                <img src="https://cdn-icons-png.flaticon.com/512/5334/5334682.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" alt="profile">
                            </div>*@

                        <div class="mb-3">
                            <input asp-for="UserName" class="form-control" id="Username" aria-describedby="usuario" placeholder="Usuario" required>
                        </div>
                        <div class="mb-3">
                            <input asp-for="Password" class="form-control" id="password" placeholder="Password" required>
                        </div>
                        <div class="mb-3">
                            <input asp-for="RememberMe" type="checkbox" id="ChkRememberMe">
                            <label class="form-check-label" for="flexCheckDefault">Recordar</label>
                        </div>

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Ingresar</button></div>


                    </form>

                </div>

                <div class="card my-5"></div>

            </div>
        </div>
    </div>
