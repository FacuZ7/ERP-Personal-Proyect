@model ERP_D.Models.Empleado

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Empleado</h4>
<hr />
<form asp-action="Create">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PosicionId" class="control-label"></label>
                <select asp-for="PosicionId" class="form-control" asp-items="ViewBag.PosicionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ObraSocial" class="control-label"></label>
                <select asp-for="ObraSocial" class="form-control" asp-items="Html.GetEnumSelectList<ObraSocial>()"></select>
                <span asp-validation-for="ObraSocial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaAlta" class="control-label"></label>
                <input asp-for="FechaAlta" class="form-control" />
                <span asp-validation-for="FechaAlta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenId" class="control-label"></label>
                @Html.DropDownList("ImagenId", ViewBag.ImagenId as SelectList, "-- SELECCIONE --", new { @class = "form-control" })
                @*<select asp-for="ImagenId" class="form-control" asp-items="ViewBag.ImagenId"></select>*@
            </div>
            <div class="form-group">
                <label class="control-label">¿Es RRHH?</label>
                @Html.CheckBox("esRRHH", isChecked: false)
            </div>
            <div class="form-group">
                <label class="control-label">Empleado Activo:</label>
                @Html.CheckBox("EstadoEmpleado", isChecked: true)
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>

        </div>
    </div>
</form>
<div>
    <a asp-action="Index">Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
