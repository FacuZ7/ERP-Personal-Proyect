@model IEnumerable<ERP_D.Models.Telefono>

@{
    ViewData["Title"] = "Index";
}

<h2>Telefono</h2>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoTelefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TelefonoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.TelefonoId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.TelefonoId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
