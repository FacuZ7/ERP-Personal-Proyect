@model ERP_D.Models.Gasto

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Gasto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GastoId" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaGasto" class="control-label"></label>
                <input asp-for="FechaGasto" class="form-control" readonly/>
                <span asp-validation-for="FechaGasto" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <input asp-for="EmpleadoID" value="@ViewBag.EmpleadoID" />
            </div>
            <div class="form-group" hidden >
                <input asp-for="CentroDeCostoId" value="@ViewBag.CentroDeCostoId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atras</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
